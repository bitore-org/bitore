    function mintEpoch(address to, uint256 epoch, bytes32 nonce, uint256 epochMinersLimit) external override nonReentrant {
        require(BITORE_POW_ADDRESS == _msgSender(), "BitOre: only BitOrePow can mint chips");

        if (minersLastEpoch[to] >= epoch) {
            return;
        }

        minersLastEpoch[to] = epoch;

        uint256 amountToMint = (1 * 10 ** decimals()) / epochMinersLimit;

        _mint(to, amountToMint);
    }

    function mintChip(
        address to,
        uint256 epoch,
        bytes32 nonce,
        uint256 position,
        uint256 epochBlock,
        uint256 epochMinersLimit
    ) external override nonReentrant {
        require(BITORE_POW_ADDRESS == _msgSender(), "BitOre: only BitOrePow can mint chips");

        if (minersLastMint[to] >= epoch) {
            return;
        }

        minersLastMint[to] = epoch;

        uint256 amountToMint = (1 * 10 ** decimals()) / epochMinersLimit;

        _mint(to, amountToMint);
    }
}
